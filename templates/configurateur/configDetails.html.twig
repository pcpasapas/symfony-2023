{% if somme != '0,00€' %}
	<div class="hr-min mx-auto my-3" id="connect"></div>
	<h2 class="text-center mx-auto my-3 text-secondary" style="font-family: Mynerve">
		Votre configuration détaillée
	</h2>
	<div class="div-config">
		{% for key, item in panier %}
			{% if item != null %}
				<img class="{{ key }}" src="{{ asset('images/' ~ key ~ '/' ~ item.id ~ '.jpg') }}" alt="image {{ key }}" />
				<span class="{{ key ~ 'Text' }}">
					{% if item.modeleMin is defined %}
						<p class="m-0">
							{{ item.modeleMin }}
						</p>
					{% endif %}
					{% if item.puissance is defined %}
						<p class="m-0">
							{{ item.puissance }} W
						</p>
					{% endif %}
					{% if item.socket is defined %}
						<p class="m-0">
							{{ item.socket }}
						</p>
					{% endif %}
					{% if item.puissanceMin is defined and key != 'CarteGraphique' %}
						<p class="m-0">
							Min : {{ item.puissanceMin }} / Boost : {{ item.puissanceBoost }}
						</p>
					{% endif %}
					{% if item.puissanceBoost is defined %}
						<p class="m-0"></p>
					{% endif %}
					{% if item.capacite is defined %}
						<p class="m-0">
							{% if key != 'CarteGraphique' %}
								<p class="m-0">
									{{ key }}
								</p>
							{% endif %}
							{{ item.capacite }} Go
						</p>
					{% endif %}
				</span>
			{% endif %}
		{% endfor %}
		<span class="prix">{{ somme }}</span>
	</div>
{% endif %}

<style>
	.hr-min { border-top: 0.4em solid #37123C; border-radius: 1em; text-align: center; width: 85%; } .div-config {
	position: relative; height: 400px; width: 100%; }

	span { font-size: 1.6vw; }

	.prix { color: #37123C; font-weight: 600; font-size: 3rem; position: absolute; bottom: 1%; left: 1%; }

	.Boitier { position: absolute; height: 20vw; max-height: 400px; left: 50%; transform: translate(-50%) }

	.Alimentation { position: absolute; height: 18%; top: 1%; left: 1%; }

	.AlimentationText { position: absolute; height: 20%; top: 1%; left: 25%; }

	.Ssd { position: absolute; height: 20%; top: 25%; left: 1%; }

	.SsdText { position: absolute; height: 20%; top: 25%; left: 25%; }

	.Hdd { position: absolute; height: 20%; top: 50%; left: 1%; }

	.HddText { position: absolute; height: 20%; top: 50%; left: 25%; }

	.CarteMere { position: absolute; height: 20%; top: 0%; right: 1%; }

	.CarteMereText { position: absolute; height: 20%; top: 0%; left:65%; }

	.Processeur { position: absolute; height: 20%; top: 25%; right: 1%; }

	.ProcesseurText { position: absolute; height: 20%; top: 25%; left:65%; }

	.Ram { position: absolute; height: 20%; width: 25%; max-width: 200px; top: 60%; right: 1%; }

	.RamText { position: absolute; height: 20%; width: 20%; top: 60%; right: 15%; }

	.CarteGraphique { position: absolute; height: 20%; top: 75%; right:1%; }

	.CarteGraphiqueText { position: absolute; height: 20%; top: 85%; left:65%; }

	@media screen and (max-width: 800px) { .div-config { width: 100%; height: 160px; display: block; position: relative; }

	.prix { font-size: 2rem; }

	.boitier { /* height: 40%; */ left: 50%; transform: translate(-50%) }

	span { font-size: 0.7rem; }

	}
</style>
